# App
PORT=5000

# Security
JWT_SECRET=your_jwt_secret_here

# Database
# For local development
MONGO_URI=mongodb://127.0.0.1:27017/notesApp

# For production (Vercel + Atlas)
# Example: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/notesApp?retryWrites=true&w=majority
MONGO_URI_PROD=

# Tenant configuration (optional)
# You can seed tenants Acme & Globex in your DB with slug identifiers
ACME_SLUG=acme
GLOBEX_SLUG=globex
